:root{
  --bg:#fafbfe; --panel:#fff; --panel-2:#f6f8fc; --text:#111827; --muted:#6b7280;
  --accent:#2563eb; --accent-2:#16a34a; --danger:#dc2626; --grid-line:#e5e7eb; --drop:rgba(37,99,235,.12)
}
*{box-sizing:border-box} html,body,#app{height:100%}
body{margin:0;font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Inter,Arial,Noto Sans;color:var(--text);background:var(--bg)}

.app-header,.app-footer{display:flex;align-items:center;justify-content:space-between;gap:12px;padding:12px 16px;background:var(--panel);border-bottom:1px solid var(--grid-line);position:sticky;top:0;z-index:10}
.app-footer{border-top:1px solid var(--grid-line);border-bottom:none;bottom:0;top:auto}
.app-header .left,.app-header .center,.app-header .right{display:flex;align-items:center;gap:8px}
button{background:var(--panel-2);color:var(--text);border:1px solid var(--grid-line);padding:8px 10px;border-radius:10px;cursor:pointer}
button:hover{border-color:var(--accent)} button:active{transform:translateY(1px)}
input[type="date"],.main-goal-input,.add-row input,.cat-select{background:var(--panel-2);border:1px solid var(--grid-line);color:var(--text);border-radius:10px;padding:8px 10px}
.main-goal-input{min-width:480px;font-weight:600} .save-status{color:var(--muted);font-size:12px;opacity:.85}

.boards{display:grid;grid-template-columns:320px 1fr;gap:16px;padding:16px;height:calc(100% - 120px)}
.palette{background:var(--panel);border:1px solid var(--grid-line);border-radius:14px;padding:12px;display:flex;flex-direction:column;min-height:0}
.palette h2{margin:4px 0 8px 0;font-size:16px;color:var(--muted);display:flex;align-items:center;gap:8px}
.count-pill{display:inline-flex;align-items:center;justify-content:center;min-width:28px;height:22px;padding:0 8px;border-radius:999px;background:#eef2ff;color:#3730a3;font-weight:700;font-size:12px}
.add-row{display:flex;gap:8px;align-items:center}
.custom-cat{min-width:120px}

.cat-filters{display:flex;flex-wrap:wrap;gap:8px;margin:10px 0 6px}
.filter-chip{padding:4px 10px;border:1px solid var(--grid-line);border-radius:999px;background:#f8fafc;color:#334155;font-size:12px;cursor:pointer;user-select:none}
.filter-chip.active{background:#e0e7ff;border-color:#c7d2fe;color:#1d4ed8;font-weight:700}

.task-list{margin-top:8px;background:var(--panel-2);border:1px dashed var(--grid-line);border-radius:12px;padding:8px;min-height:140px;overflow:auto}
.hint{margin-top:8px;color:var(--muted);font-size:12px}

.day-grid{background:var(--panel);border:1px solid var(--grid-line);border-radius:14px;padding:0;display:grid;grid-template-columns:80px 1fr;height:100%;overflow:auto}
.hour-label{padding:10px 8px;color:var(--muted);border-right:1px solid var(--grid-line);border-bottom:1px solid var(--grid-line);text-align:right;background:#fff}
.hour-dropzone{min-height:56px;padding:6px 10px;border-bottom:1px solid var(--grid-line);background:transparent;display:flex;align-items:center;gap:8px}
.hour-dropzone.drag-over{background:var(--drop)}
.hour-summary{flex:1;display:flex;align-items:center;gap:8px;min-height:36px;flex-wrap:wrap}
.hour-summary.empty{color:var(--muted);font-style:italic}

/* Task chip */
.task{background:#fff;border:1px solid #e6eaf2;border-left:4px solid var(--accent);border-radius:10px;padding:6px 8px;margin:6px 6px 6px 0;display:flex;align-items:center;gap:8px;box-shadow:0 1px 1px rgba(0,0,0,.04);user-select:none}
.task .task-text{flex:1;white-space:pre-wrap;color:#111827}
.task .done-btn{width:22px;height:22px;border-radius:8px;border:1px solid var(--grid-line);background:#f1f5ff;color:var(--accent-2);font-weight:900;line-height:1}
.task .delete-btn{width:24px;height:24px;padding:0;border-radius:8px;background:#fff5f5;border:1px solid #ffd9d9;color:var(--danger)}

/* Category badge */
.cat-badge{display:inline-flex;align-items:center;gap:6px;padding:2px 8px;border-radius:999px;font-size:12px;border:1px solid var(--grid-line);background:#f8fafc;color:#334155}
.cat-work{background:#eff6ff;color:#1d4ed8;border-color:#bfdbfe}
.cat-study{background:#f5f3ff;color:#6d28d9;border-color:#ddd6fe}
.cat-errand{background:#fff7ed;color:#c2410c;border-color:#fed7aa}
.cat-personal{background:#fdf2f8;color:#be185d;border-color:#fbcfe8}
.cat-other{background:#f1f5f9;color:#334155;border-color:#e2e8f0}
.cat-custom{background:#ecfeff;color:#0e7490;border-color:#a5f3fc}

/* Completed look */
.task.done{opacity:.78;border-left-color:var(--accent-2);background:#eaf7ee;color:#64748b}
.task:hover{border-color:#d0d7e6}

/* Current hour highlight */
.hour-label.hour-now{ background:#fff7d6; font-weight:600; }
.hour-dropzone.hour-now{ background:#fffdf0; box-shadow: inset 0 0 0 2px #fde68a; }

@media (max-width:1100px){.boards{grid-template-columns:1fr}.palette{order:2}.day-grid{order:1}.main-goal-input{min-width:240px;width:100%}}

