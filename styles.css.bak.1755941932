.timer-btn{ border:1px solid var(--grid-line); background:#fff; border-radius:7px; padding:1px 5px; line-height:1.1; cursor:pointer; }
.timer-btn:hover{ border-color: var(--accent); }

/* Completed: filled (soft), readable */
.task.done{
  background:#eef8ff;
  border-color:#cfeaff;
  color:#374151;
}
.task.done .cat-badge{ opacity:.85; }
.task.done .timer-box{ opacity:.75; }

/* ===== Hour Tasks modal ===== */
.fd-hour-overlay{
  position:fixed; inset:0; background:rgba(0,0,0,.35);
  display:none; align-items:center; justify-content:center; z-index:9999;
}
.fd-hour-overlay.show{ display:flex; }
.fd-hour-modal{
  width:min(900px,92vw); max-height:84vh; overflow:auto;
  background:#fff; border-radius:14px; box-shadow:0 10px 40px rgba(0,0,0,.18);
  border:1px solid var(--grid-line); padding:16px 18px;
}
.fd-hour-modal header{
  display:flex; align-items:center; justify-content:space-between; margin-bottom:10px;
}
.fd-hour-modal h3{ margin:0; font-size:18px; }
.fd-hour-close{ border:1px solid var(--grid-line); background:#fff; border-radius:8px; padding:6px 10px; cursor:pointer; }
.fd-hour-list .task{ margin-top:8px; }

/* Completed tasks = softly filled (no strikethrough) */
.task.done{
  background:#eef8ff; border-color:#cfeaff; color:#374151;
}
/* === FINAL STACKING FIX ===
   Some earlier styles position tasks absolute for left/right reordering.
   That makes multiple tasks in an hour overlap. Force normal flow.   */

/* 1) Hour body stacks vertically and grows with content */
.hour-dropzone{
  display:block !important;
  height:auto !important;
  min-height:68px !important;
  overflow:visible !important;
  padding:10px 12px;
}
.hour-summary{
  position:static !important;
  display:flex !important;
  flex-direction:column !important;
  gap:8px !important;
}

/* 2) Task cards must be in normal flow, full width */
.hour-summary .task,
.hour-dropzone .task{
  position:static !important;   /* <-- key: cancel absolute/relative offsets */
  left:auto !important;
  right:auto !important;
  top:auto !important;
  bottom:auto !important;
  transform:none !important;
  width:100% !important;
  max-width:100% !important;
  box-sizing:border-box !important;
  z-index:1 !important;
}

/* Keep your 5-column alignment within each task */
.hour-summary .task{
  display:grid !important;
  grid-template-columns:auto auto minmax(0,1fr) auto auto !important; /* ✓ | badge | text | timer | actions */
  align-items:center; column-gap:10px; padding:8px 10px;
  background:#fff; border:1px solid var(--grid-line); border-radius:10px;
}
.task .done-btn{ grid-column:1; }
.task .cat-badge{ grid-column:2; }
.task .task-text{ grid-column:3; min-width:0; }
.task.in-hour .timer-box{ grid-column:4; margin-left:0; }
.task .task-actions{ grid-column:5; margin-left:0; display:flex; gap:6px; }

/* Completed = softly filled (no strikethrough) */
.task.done{ background:#eef8ff; border-color:#cfeaff; color:#374151; }
